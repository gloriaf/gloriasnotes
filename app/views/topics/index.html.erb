<h1>Listing Topics</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Topic type</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @topics.each do |topic| %>
  <tr>
    <td><%= topic.name %></td>
    <td><%= topic.topic_type %></td>
    <td><%= topic.description %></td>
    <td><%= link_to 'Show', topic_path(topic) %></td>
    <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
    <td><%= link_to 'Remove', topic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
