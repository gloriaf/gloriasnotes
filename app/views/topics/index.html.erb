<% provide(:title, 'Topic list') %>
<div class="center hero-unit">
  <h1><font color="cc3399">Gloria's Notes</font></h1>
  <h2>
    This list are my personal notes
    on various topics of interest to me.
  </h2>
</div>
<div class="hero-unit">
  <table class="pretty">
    <tr style="font-size: 1.2em">
      <th><b><%= sortable "name" %></b></th>
      <th><b><%= sortable "topic_type" %></b></th>
      <th><b><%= sortable "description" %></b></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    
    <% @topics.each do |topic| %>
      <tr style="font-size: 1.1em">
        <td><%= topic.name %></td>
        <td><%= topic.topic_type %></td>
        <td><%= topic.description %></td>
        <td><%= link_to 'Show', topic_path(topic) %></td>
        <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
        <td><%= link_to 'Remove', topic, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
   </table>
 
  <li class="center" style="font-size: 1.2em"><%= link_to 'New topic', new_topic_path %></li>
</div>