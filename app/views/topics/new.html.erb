<% provide(:title, 'New topic') %>
<h1>New Topic</h1>

<div class="row hero-unit">
  <div class="span6 offset3">
    
    <%= form_for(@topic) do |f| %>
      <%= render 'topic' , f: f %>
      <%= f.submit "Create", class: "btn btn-large btn-primary" %>
    <% end %>
  
    <li class="center" style="font-size: 1.2em"><%= link_to 'Back', topics_path  %></li>
  </div>
</div>