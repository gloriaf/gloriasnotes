<h1> New Topic </h1>

  <%= form_for(@topic) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :topic_type %>
    <%= f.text_field :topic_type %>
    
    <%= f.label :description %>
    <%= f.text_field :description %>
    
    <%= f.label :documentation %>
    <%= f.text_field :documentation %>
    
    <%= f.submit "Create" %>
    
  <% end %>
